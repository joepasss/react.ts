{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true, // using ts-loader
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },

  "include": ["./src/**/*"]
}
