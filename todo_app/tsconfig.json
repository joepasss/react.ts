{
  "compilerOptions": {
    "outDir": "./public",
    "sourceMap": true,
    "target": "esnext",
    "module": "es6",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
